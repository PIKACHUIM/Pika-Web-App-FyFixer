						<image style="height:120rpx;width:120rpx;" mode="aspectFit" src="../../static/images/repairman.png"></image>
            <view class="colstart" style="width:30%;">
					    <view class="cu-tag round bg-yellow tec " style="width:100rpx;height:30rpx">技术员</view>
					    <!-- <view class="cu-tag round bg-green tag" style="width:100rpx;height:30rpx">用户</view> -->
