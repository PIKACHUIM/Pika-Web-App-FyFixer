.whitecard1 {
  display: flex;
  flex-direction: column;
  padding: 44rpx 20rpx;
  justify-content: start;
  align-items: center;
  position: absolute;
  top: 80rpx;
  width: 750rpx;
  min-height: 50vh;
  background: #FFFFFF;
  border-radius: 25px;
}

.list {
  margin-top: 5rpx;
  width: 100%;
}

.card {
  width: 100%;
  height: 85%;
  border-radius: 15px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.22);
}

.btn {
  width: 100%;
  height: 100rpx;
  font-family: SimHei;
  font-style: normal;
  font-weight: normal;
  font-size: 18px;
  line-height: 21px;
  text-align: center;
  color: #FFFFFF;
}

.btn1 {
  height: 75rpx;
  background: #dfe4ea;
  border-radius: 25px;
  font-family: SimHei;
  font-style: normal;
  font-weight: normal;
  font-size: 36rpx;
  line-height: 42rpx;
  text-align: center;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.25);
  color: rgba(0, 0, 0, 0.49);
}

.listcard {
  width: 100%;
  height: 250rpx;
  margin-top: 5rpx;
  padding-bottom: 10rpx;
}

.tag {
  box-shadow: 0rpx 0rpx 30rpx rgba(63, 245, 132, 0.89);
  color: #81f581;
}

.tec {
  box-shadow: 0rpx 0rpx 30rpx rgba(248, 229, 59, 0.89);
