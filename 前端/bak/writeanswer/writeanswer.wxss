.whitecard_question{
  display: flex;
  flex-direction: column;
  padding: 44rpx 8rpx;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 95%;
  height: 120rpx;
  background: #FFFFFF;
  border: 1px solid #E5E5E5;
  box-sizing: border-box;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 14px;
}

.btn {
  width: 100%;
  height: 100rpx;
  font-family: SimHei;
  font-style: normal;
  font-weight: normal;
  font-size: 18px;
  line-height: 21px;
  text-align: center;
  color: #FFFFFF;
}